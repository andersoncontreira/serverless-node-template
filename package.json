{
  "name": "serverless-node-template",
  "version": "1.0.0",
  "description": "Template to build customizable, flexible and well documented APIs with Node.js and Express.",
  "main": "index.ts",
  "repository": "git@github.com:andersoncontreira/serverless-node-template.git",
  "author": "Anderson Contreira <anderson.contreira@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "sucrase-node src/server.ts",
    "start:dev": "APPLICATION_ENV='development' nodemon src/server.ts --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest-unit.config.json",
    "test:cov": "jest --config ./test/jest-unit.config.json --coverage",
    "test:component": "jest --config ./test/jest-component.config.json",
    "test:component-cov": "jest --config ./test/jest-component.config.json --coverage",
    "test:integration": "jest --config ./test/jest-integration.config.json",
    "test:integration-cov": "jest --config ./test/jest-integration.config.json --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.config.json",
    "test:all": "jest --config ./test/jest-all.config.json",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@vendia/serverless-express": "^4.8.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "ts-jest": "^28.0.5",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.71",
    "@types/jest": "^28.1.2",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "aws-sdk": "^2.831.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^5.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.7.1",
    "sucrase": "^3.17.0",
    "supertest": "^6.2.3",
    "typescript": "^4.1.3"
  }
}
